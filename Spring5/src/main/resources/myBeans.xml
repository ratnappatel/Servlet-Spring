<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">
		
		<bean id="d1" class="org.cap.pojo.Department" scope="prototype">
			<constructor-arg name="no" value="10"/>
			<constructor-arg name="name" value="IT"/>
		</bean>
<!--  Employee e1=new Employee(argument) CONSTRUCTOR BASED DEPENDENCY  -->
	<bean id="employee" class="org.cap.pojo.Employee" scope="prototype">
		<constructor-arg name="department" ref="d1"/>
		<constructor-arg name="employeeId" value="1005"/>
		<constructor-arg name="firstName" value="Ram"/>
		<constructor-arg name="lastName" value="Singh"/>
		 <constructor-arg name="salary" value="56000"/> 	
	</bean>

</beans>
